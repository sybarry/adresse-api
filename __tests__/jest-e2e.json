{
  "moduleFileExtensions": ["js", "json", "ts"],
  "testPathIgnorePatterns": ["<rootDir>/node_modules/", "<rootDir>/dist/"],
  "rootDir": "./src",
  "testEnvironment": "node",
  "testMatch": [
    "**/__tests__/**/*.ts",   
    "**/?(*.)+(spec|test).ts"
  ],
  
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  }
}
